<Window x:Class="CTSProject.GUI.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CTSProject.GUI"
        mc:Ignorable="d"
        Icon="cart.ico"
        Title="Login" Height="300" Width="450" ResizeMode="NoResize"
        Topmost="True" WindowStartupLocation="CenterScreen">
  <Grid Background="#bfc7d2">
    <StackPanel HorizontalAlignment="Center" Margin="50" VerticalAlignment="Center" Background="#f6e8db">
      <TextBlock Margin="10" FontSize="20" Foreground="#676a6f">Enter your unique login:</TextBlock>
      <TextBox Name="LoginBox" Margin="10" FontSize="16"> </TextBox>
      <Button Margin="10" Click="Login_Click" Background="#d9be98" FontSize="16" Foreground="#676a6f">Confirm</Button>
    </StackPanel>
  </Grid>
</Window>
