<Window x:Class="CTSProject.GUI.Cart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CTSProject.GUI"
        mc:Ignorable="d"
        Title="Cart" Height="400" Width="600">
    <Grid>
        <DockPanel Margin="20" LastChildFill="True">
            <TextBlock DockPanel.Dock="Top" Margin="10">
                Ваша корзина:
            </TextBlock>
            <StackPanel CanVerticallyScroll="True" DockPanel.Dock="Top">
                <ListBox Name="CartItems">a</ListBox>
            </StackPanel>
            <TextBlock x:Name="Sum" Text="Сумма: {0} рублей" DockPanel.Dock="Bottom" Width="Auto" Height="50" Margin="20" HorizontalAlignment="Right" VerticalAlignment="Center" TextAlignment="Center">
            </TextBlock>
        </DockPanel>
    </Grid>
</Window>
