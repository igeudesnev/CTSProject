<Window x:Class="CTSProject.GUI.Product"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CTSProject.GUI"
        mc:Ignorable="d"
        Title="Product" Height="300" Width="450" ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Image></Image>
                <StackPanel Margin="20" HorizontalAlignment="Right">
                    <TextBlock>Название</TextBlock>
                    <TextBlock HorizontalAlignment="Right">Цена</TextBlock>
                </StackPanel>
            </StackPanel>
            <TextBlock>Rating</TextBlock>
            <TextBlock>Description</TextBlock>
            <ListBox>Reviews</ListBox>
        </StackPanel>
    </Grid>
</Window>
